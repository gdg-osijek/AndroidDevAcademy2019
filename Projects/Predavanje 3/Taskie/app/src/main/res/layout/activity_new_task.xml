<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.newtask.NewTaskActivity">
    <TextView
            android:id="@+id/newTaskHeading"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/match_constraint"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/HeadingTextView"
            android:text="@string/newTaskHeadingText"/>
    <EditText
            android:id="@+id/newTaskTitleInput"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newTaskHeading"
            app:layout_constraintLeft_toLeftOf="@id/newTaskHeading"
            app:layout_constraintRight_toRightOf="@id/newTaskHeading"
            android:hint="@string/newTaskTitleInputHint"/>
    <EditText
            android:id="@+id/newTaskDescriptionInput"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/newTaskTitleInput"
            app:layout_constraintLeft_toLeftOf="@id/newTaskHeading"
            app:layout_constraintRight_toRightOf="@id/newTaskHeading"
            android:hint="@string/newTaskDescriptionInputHint"/>
    <Spinner
            android:id="@+id/prioritySelector"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/newTaskHeading"
            app:layout_constraintRight_toRightOf="@id/newTaskHeading"
            app:layout_constraintTop_toBottomOf="@id/newTaskDescriptionInput"
            android:entries="@array/priorities"
            android:layout_marginTop="@dimen/marginLarge"/>
    <Button
            android:id="@+id/saveTaskAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/newTaskHeading"
            app:layout_constraintRight_toRightOf="@id/newTaskHeading"
            app:layout_constraintTop_toBottomOf="@id/prioritySelector"
            android:layout_marginTop="@dimen/marginLarge"
            android:text="@string/saveTaskActionText"/>

</android.support.constraint.ConstraintLayout>